<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Title_Main_Activity">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumText_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Title_Movie">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Category_Movie_Music">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middleText_22</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Name_Music">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smallText_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Subtitle_Artist_Music">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tinyText_16</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Type_Movie">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/smallText_18</item>
    </style>

    <style name="Button_Login_Subscribe">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/smallText_18</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/purple_700</item>
    </style>

    <style name="CustomTabTextLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/mediumText_24</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipColors" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_color_text</item>
    </style>

    <style name="CustomChipColors" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="shapeableImageStyle" parent="">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

</resources>